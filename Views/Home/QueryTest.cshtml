@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Cliente>
<div class="container">
    <br />
    <div style="width:100%; margin:0 auto;">
        <table id="tabela_id" class="table table-striped table-bordered dt-responsive nowrap" width="100%"
            cellspacing="0">
            <thead thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Cliente</th>
                    <th>Contato</th>
                    <th>Tipo</th>
                    <th>Telefone</th>
                    <th>Cidade</th>
                    <th>Bairro</th>
                    <th>Logradouro</th>
                    <th>Cadastro</th>
                    <th>Última Atualização</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cliente item in Model)
                {
                    <tr>
                        <td>@item.ClienteId</td>
                        <td>@item.Cliente1</td>
                        <td>@item.NomeContato</td>
                        <td>@item.TipoCliente</td>
                        <td>@item.TelefoneContato</td>
                        <td>@item.Cidade</td>
                        <td>@item.Bairro</td>
                        <td>@item.Logradouro</td>
                        <td>@item.DataCadastro</td>
                        <td>@item.DataAtualizacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
<script> //manipulação do dom pelo função dataTable (Jquery)
    $(document).ready(function () {
        $('#tabela_id').DataTable();
    });
</script>

}
