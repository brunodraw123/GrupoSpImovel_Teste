    <p class="font-weight-bold">
    <h1 class="display-6 text-danger">
        Sistema Gerenciador de Cadastros</h1>
    </p>
</div>

<br />

<table id="tabela_id" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Contato</th>
            <th>Tipo</th>
            <th>Número Celular</th>
            <th>Cidade</th>
            <th>Bairro</th>
            <th>Logradouro</th>
            <th>Cadastro</th>
            <th>Última Atualização</th>
            <th> + </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
            @foreach (Cliente item in Model)
            {
                <tr>
                    <td>@item.ClienteId</td>
                    <td>@item.Cliente1</td>
                    <td>@item.NomeContato</td>
                    <td>@item.TipoCliente</td>
                    <td>@item.TelefoneContato</td>
                    <td>@item.Cidade</td>
                    <td>@item.Bairro</td>
                    <td>@item.Logradouro</td>
                    <td>@item.DataCadastro</td>
                    <td>@item.DataAtualizacao</td>

                    <td>
                        <p><a href="#modal" rel="modal:open" onclick="ExtrairId({@item.ClienteId})">Editar</a></p>
                    </td>
                </tr>
            }
    </tbody>
</table>

